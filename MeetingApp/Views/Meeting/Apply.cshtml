@model UserInfo
@{
       ViewBag.title = "Başvuru Formu";
       
  }
  <main class="text-center">
<h1 class="h4 text-center">Toplantı Katılım Formu</h1>
<form action="/Meeting/Apply" method="post" novalidate>  
         <div asp-validation-summary="All"></div>
         <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control">

         </div>
         <div class="mb-3">
              <label asp-for="Phone" class="form-label">Phone</label>
              <input asp-for="Phone" class="form-control">
        </div>
        <div class="mb-3">
              <label asp-for="Email" class="form-label">E-mail</label>
              <input asp-for="Email"class="form-control">
        </div>
        <div class="mb-3">
              <label asp-for="WillAttend" class="form-label">WillAttend</label>
              
              <select  asp-for="WillAttend" class="form-select">
                     <option value="">seçiniz</option>
                     <option value="true">Yes,will Join</option>
                     <option value="false">no,i will not attend</option>

              </select>
        </div>

       <button class="btn btn-primary" type="submit">Kaydet</button>
</form>
</main>